<phone:PhoneApplicationPage
    x:Class="Lights_Out.Game"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:phone="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone"
    xmlns:shell="clr-namespace:Microsoft.Phone.Shell;assembly=Microsoft.Phone"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    SupportedOrientations="Portrait" Orientation="Portrait"
    xmlns:toolkit="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone.Controls.Toolkit"
    mc:Ignorable="d"
    shell:SystemTray.IsVisible="True">

    <!--LayoutRoot is the root grid where all page content is placed-->
    <Grid x:Name="GridPlay" Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--TitlePanel contains the name of the application and page title-->
        <StackPanel x:Name="TitlePanel1" Grid.Row="0" Margin="10,15,0,25">
            <TextBlock x:Name="ApplicationTitle1" Text="MOLE OUT" FontFamily="Comic Sans MS"
                       FontSize="{StaticResource PhoneFontSizeNormal}"/>
            <Grid x:Name="Liv">
                
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="3*" />
                </Grid.ColumnDefinitions>
                
                
                <TextBlock Grid.Column="0" 
                       x:Name="PageTitle1" 
                       Text="livello" 
                       FontFamily="Comic Sans MS"
                       FontSize="{StaticResource PhoneFontSizeExtraExtraLarge}"/>
                
                <TextBlock x:Name="id" 
                       Grid.Column="1" 
                       Text="{Binding LivAttuale.Id}" 
                       FontFamily="Comic Sans MS"
                       FontSize="{StaticResource PhoneFontSizeExtraExtraLarge}"/>

            </Grid>
            
                 
        </StackPanel>

        
        <!-- CAMPO DI GIOCO-->
        <StackPanel Grid.Row="1">
            
            <StackPanel.Background>
                
                <ImageBrush ImageSource="Images/Campo.png"></ImageBrush>
                
            </StackPanel.Background>
            
            <!-- GRIGLIA -->
            <ListBox ItemsSource="{Binding Celle}">
                <ListBox.ItemTemplate>
                    
                    <DataTemplate>
                        
                        <StackPanel>
                            
                           <Button Tag="{Binding Id}" 
                                   Margin="-7" 
                                   BorderThickness="0"  
                                   Click="Go" 
                                   Width="110" 
                                   Height="110">
                               
                                 <Button.Background>
                                       <ImageBrush ImageSource="{Binding Sfondo}" />
                                 </Button.Background>
                               
                           </Button>
                        </StackPanel>
                        
                    </DataTemplate>
                    
                    
                </ListBox.ItemTemplate>
                    
                <ListBox.ItemsPanel>
                    
                    <ItemsPanelTemplate>
                        <toolkit:WrapPanel/>
                    </ItemsPanelTemplate>
                    
                </ListBox.ItemsPanel>
            </ListBox>
            <!-- END GRIGLIA-->
        </StackPanel>
        <!-- CAMPO DI GIOCO-->


        <!-- INIZIO PARTE MOSSE -->
        <Grid x:Name="Mosse" Grid.Row="2">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>
            
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <TextBlock HorizontalAlignment="Right" 
                       VerticalAlignment="Center" 
                       Text="mosse" 
                       Grid.Column="0" 
                       Grid.Row="0" 
                       FontSize="{StaticResource PhoneFontSizeLarge}"
                       FontFamily="Comic Sans MS"/>
           
            <TextBlock Name="num_mosse" 
                       HorizontalAlignment="Center" 
                       Text="{Binding Mosse}" 
                       Grid.Column="1" 
                       Grid.Row="0" 
                       FontSize="{StaticResource PhoneFontSizeExtraLarge}"
                       FontFamily="Comic Sans MS"/>
            
            <TextBlock HorizontalAlignment="Right" 
                       VerticalAlignment="Center" 
                       Text="best score" 
                       Foreground="Yellow"
                       Grid.Column="0" 
                       Grid.Row="1" 
                       FontSize="{StaticResource PhoneFontSizeLarge}"
                       FontFamily="Comic Sans MS"/>
            
            <TextBlock Name="best_score" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center" 
                       Text="{Binding LivAttuale.Best_Score}" 
                       Foreground="Yellow"
                       Grid.Column="1" 
                       Grid.Row="1" 
                       FontSize="{StaticResource PhoneFontSizeLarge}"
                       FontFamily="Comic Sans MS"/>

        </Grid>
        <!-- END PARTE MOSSE-->



    </Grid>
    
</phone:PhoneApplicationPage>