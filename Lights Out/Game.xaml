                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="3*" />
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" x:Name="PageTitle1" Text="livello" 
                       FontFamily="Comic Sans MS"
                       FontSize="{StaticResource PhoneFontSizeExtraExtraLarge}"/>
                <TextBlock x:Name="id" Grid.Column="1" Text="{Binding LivAttuale.Id}" 
                       FontFamily="Comic Sans MS"
                       FontSize="{StaticResource PhoneFontSizeExtraExtraLarge}"/>

            </Grid>
            
                       <!--Style="{StaticResource PhoneTextTitle1Style}"/> -->
        </StackPanel>

        <StackPanel Grid.Row="1">
            <StackPanel.Background>
                <ImageBrush ImageSource="Images/Campo.png">

                </ImageBrush>
                </StackPanel.Background>
                <ListBox ItemsSource="{Binding Celle}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <Button Tag="{Binding Id}" Margin="-7" BorderThickness="0"  Click="Go" Width="110" Height="110">
                           <Button.Background>
                                <ImageBrush ImageSource="{Binding Sfondo}" />
                            </Button.Background>
                        </Button>
                        </StackPanel>
                        <!--<TextBlock Text="Cella:"/>
                            <TextBlock Text="{Binding Id}" />
                            <TextBlock Text="Stato:" />
                            <TextBlock Text="{Binding Stato}" />-->
                    </DataTemplate>
                </ListBox.ItemTemplate>
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <toolkit:WrapPanel/>
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
            </ListBox>
        </StackPanel>
