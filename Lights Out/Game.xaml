                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Cella:"/>
                            <TextBlock Text="{Binding Id}" />
                            <TextBlock Text="Stato:" />
                            <TextBlock Text="{Binding Stato}" />
