        <!--TitlePanel contains the name of the application and page title-->
        <StackPanel x:Name="TitlePanel1" Grid.Row="0" Margin="12,17,0,28">
            <TextBlock x:Name="ApplicationTitle1" Text="MOLE OUT" Style="{StaticResource PhoneTextNormalStyle}"/>
